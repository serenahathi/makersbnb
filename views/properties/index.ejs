<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>lolhost</title>
  </head>
  <body>
    <h1>List of all properties</h1>
    <ul>
      <% properties.forEach(function(property) { %>
        <li>
          <%= property.name %>
          <li>Cost per night: Â£<%= property.price %>.00
          <li>Property description: <%= property.description %></li>

          </li>
          <li>
          Dates available: <%= property.availablefrom %> until
          <%= property.availableuntil %>
        </li>

        <form action="/properties/request">
          <input type="hidden" name="id" value="<%=property.id%>">
          <button id="property-<%= property.id %>" type="submit">Request this property</button>
        </form>

        <br><br>
      <% }); %>
    </ul>

    <form action="/properties/new">
      <input type="submit" value="List new property">
    </form>
  </body>
</html>
